<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:color="#FF1122"
                android:width="0dp"/>
            <gradient android:angle="0"
                android:startColor="#00FF0022"  
                android:centerColor="#DDDD4444" 
                android:endColor="#00FF0022" 
                />
        </shape>
    </item>    
   
	<item android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:color="#FF0000"
                android:width="0dp"/>
            <gradient android:angle="270"
                android:startColor="#00FF77FF"  
                android:centerColor="#117788FF" 
                android:endColor="#00FF77FF" 
                />
        </shape>
    </item>
</selector>