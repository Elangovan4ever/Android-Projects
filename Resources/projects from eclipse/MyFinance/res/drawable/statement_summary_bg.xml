<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:color="#FF1122"
                android:width="2dp"/>
            <gradient android:angle="0"
                android:startColor="#77FF8899"  
                android:centerColor="#DDFF8899" 
                android:endColor="#99FF8899" 
                />
        </shape>
    </item>
    
   
	<item android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:color="#FF22DD"
                android:width="1dp"/>
            <gradient android:angle="270"
                android:startColor="#66FF369E"  
                android:centerColor="#FFFF369E" 
                android:endColor="#88FF369E" 
                />
        </shape>
    </item>
</selector>