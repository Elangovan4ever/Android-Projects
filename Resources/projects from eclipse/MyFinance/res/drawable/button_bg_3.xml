<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:color="#FF1122"
                android:width="1dp"/>
            <gradient android:angle="270"
                android:startColor="#77FF8899"  
                android:centerColor="#DDFF8899" 
                android:endColor="#99FF8899" 
                />
        </shape>
    </item>
    
   
	<item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="0dp"/>
            <stroke android:color="#0022DD"
                android:width="1dp"/>
            <gradient android:angle="270"
                android:startColor="#661111FE"  
                android:centerColor="#FF2222EE" 
                android:endColor="#661121FF" 
                />
        </shape>
    </item>
</selector>